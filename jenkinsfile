pipeline{
    agent { label 'jenkins' }
    triggers { pollSCM('* * * * *') }
     stages {
        stage ( 'vcs') {
          steps {
            git url: 'https://github.com/shopizer-ecommerce/shopizer.git',
            branch: 'develop'
          }
        }
        stage ('build') {
            steps {
                sh 'mvn package'
            }
        }
        stage ( 'artifactory' ) {
          steps {
            archiveArtifacts artifacts: '**/target/*.jar'
          }
        }
        stage ( 'test results') {
         steps {
            junit '**/surefire-reports/*.xml'
         }   
        }
        }
     }
